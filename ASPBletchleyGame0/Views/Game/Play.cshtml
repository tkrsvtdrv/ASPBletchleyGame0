@model ASPBletchleyGame0.Models.GuessViewModel

@{
    ViewBag.Title = "Bletchley Game";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="text-center mb-4">Bletchley Code Cracking Game</h2>
            <p class="text-muted text-center">Enter 4 numbers between 0 and 7. You have 13 tries.</p>

            @if (!string.IsNullOrEmpty(ViewBag.Feedback))
            {
                        <div class="alert alert-info text-center">
                    @Html.Raw(ViewBag.Feedback)
                        </div>
            }

            @using (Html.BeginForm("Play", "Game", FormMethod.Post, new { @class = "row g-3 justify-content-center" }))
            {
                        <div class="col-md-2">
                    @Html.LabelFor(m => m.Guess1)
                    @Html.TextBoxFor(m => m.Guess1, new { @class = "form-control", type = "number", min = "0", max = "7" })
                        </div>
                        <div class="col-md-2">
                    @Html.LabelFor(m => m.Guess2)
                    @Html.TextBoxFor(m => m.Guess2, new { @class = "form-control", type = "number", min = "0", max = "7" })
                        </div>
                        <div class="col-md-2">
                    @Html.LabelFor(m => m.Guess3)
                    @Html.TextBoxFor(m => m.Guess3, new { @class = "form-control", type = "number", min = "0", max = "7" })
                        </div>
                        <div class="col-md-2">
                    @Html.LabelFor(m => m.Guess4)
                    @Html.TextBoxFor(m => m.Guess4, new { @class = "form-control", type = "number", min = "0", max = "7" })
                        </div>

                        <div class="col-12 text-center mt-3">
                            <button type="submit" class="btn btn-primary px-4">Submit Guess</button>
                        </div>
            }
        </div>
    </div>
</div>



